// import posts list

const connection = require('../db/connection');

// Create INDEX route function

const index = (req, res) => {
    const sql = 'SELECT * FROM posts';
    connection.query(sql, (err, results) => {
        if (err) 
            return res.status(500).json({
                error: true,
                message: err.message
            });
        console.log(results);
        res.json(results);
    });
};

module.exports = {index};